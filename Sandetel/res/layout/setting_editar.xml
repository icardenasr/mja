                android:layout_marginBottom="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/empresa"
                android:textColor="@color/red_row_list"
                android:textSize="15sp" />

            <com.xabber.android.utils.font.etRobotoRegular
                android:id="@+id/et_empresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ellipsize="end"
                android:enabled="false"
                android:inputType="text"
                android:singleLine="true"
                android:tag="@string/empresa"
                android:textColor="@android:color/black" />

            <com.xabber.android.utils.font.tvRobotoRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/cif"
                android:textColor="@color/red_row_list"
                android:textSize="15sp" />

            <com.xabber.android.utils.font.etRobotoRegular
                android:id="@+id/et_cif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ellipsize="end"
                android:enabled="false"
                android:inputType="text"
                android:singleLine="true"
                android:tag="@string/cif"
                android:textColor="@android:color/black" />

            <com.xabber.android.utils.font.tvRobotoRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/cod_distri"
                android:textColor="@color/red_row_list"
                android:textSize="15sp" />

            <com.xabber.android.utils.font.etRobotoRegular
                android:id="@+id/et_cod_distri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ellipsize="end"
                android:enabled="false"
                android:inputType="text"
                android:singleLine="true"
                android:tag="@string/cod_distri"
                android:textColor="@android:color/black" />

            <com.xabber.android.utils.font.tvRobotoRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/fecha_alta"
                android:textColor="@color/red_row_list"
                android:textSize="15sp" />

            <com.xabber.android.utils.font.etRobotoRegular
                android:id="@+id/et_fecha_alta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ellipsize="end"
                android:enabled="false"
                android:inputType="text"
                android:singleLine="true"
                android:tag="@string/fecha_alta"
                android:textColor="@android:color/black" />

            <com.xabber.android.utils.font.btnRobotoRegular
                android:id="@+id/ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_chat"
                android:text="@string/guardar"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

