            <com.xabber.android.utils.font.tvRobotoRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/localidad"
                android:textColor="@color/red_row_list"
                android:textSize="15sp" />

            <com.xabber.android.utils.font.etRobotoRegular
                android:id="@+id/et_localidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ellipsize="end"
                android:inputType="text"
                android:singleLine="true"
                android:tag="@string/localidad"
                android:textColor="@android:color/black" />

            <com.xabber.android.utils.font.tvRobotoRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/pais"
                android:textColor="@color/red_row_list"
                android:textSize="15sp" />

            <com.xabber.android.utils.font.etRobotoRegular
                android:id="@+id/et_pais"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ellipsize="end"
                android:inputType="text"
                android:singleLine="true"
                android:tag="@string/pais"
                android:textColor="@android:color/black" />

            <com.xabber.android.utils.font.tvRobotoRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/cod_post"
                android:textColor="@color/red_row_list"
                android:textSize="15sp" />

            <com.xabber.android.utils.font.etRobotoRegular
                android:id="@+id/et_cod_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ellipsize="end"
                android:inputType="number"
                android:singleLine="true"
                android:tag="@string/cod_post"
